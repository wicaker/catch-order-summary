{
    "extends": "strongloop",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "max-len": [
            "error",
            {
                "code": 200
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "es6": true
    }
}